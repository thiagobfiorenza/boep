<h1>Listing orders</h1>

<table>
  <tr>
    <th>Customer</th>
    <th>Enddate</th>
    <th>Comment</th>
  </tr>

<% for order in @orders %>
  <tr>
    <td><%=h order.customer.name %></td>
    <td><%=h order.enddate.strftime("%d/%m/%Y") %></td>
    <td><%=h order.comment %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

