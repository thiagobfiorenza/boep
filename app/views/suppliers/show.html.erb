<p>
  <b>Name:</b>
  <%=h @supplier.name %>
</p>

<p>
  <b>Document:</b>
  <%=h @supplier.document %>
</p>

<p>
  <b>Email:</b>
  <%=h @supplier.email %>
</p>

<p>
  <b>Address:</b>
  <%=h @supplier.address %>
</p>

<p>
  <b>City:</b>
  <%=h @supplier.city %>
</p>

<p>
  <b>State:</b>
  <%=h @supplier.state %>
</p>

<p>
  <b>Phone:</b>
  <%=h @supplier.phone %>
</p>

<p>
  <b>Postcode:</b>
  <%=h @supplier.postcode %>
</p>

<% unless @supplier.categories.empty? %>
  <p>
    <b>Categories:</b>
    <ul>
      <% @supplier.categories.each do |category| %>
        <li><%=h category.name %>
		<ul>
      <% @supplier.products.each do |product| %>
	<% if product.category_id == category.id then %>
			<li><%=h product.name %></li>
	 <% end %>
      <% end %>
		</ul>
	</li>
      <% end %>
    </ul>
  </p>
<% end %>


